<div class="container-fluid bg-danger d-flex justify-content-center align-items-center" style="min-height: 100vh">
    <div class="col-10 bg-dark opacity-75 p-3">
        <h1 class="text-white text-center">Mi Carrito {{cartId}}</h1>
        
        {{#each cart.payload}}
            <div class="row bg-danger border border-dark border-2">
                <div class="col-3 border-end border-dark">
                    <h4>{{this.product.title}}</h4>
                </div>
                <div class="col-3 border-end border-dark">
                    <h4>Cantidad: {{this.quantity}}</h4>
                </div>
                <div class="col-3 border-end border-dark">
                    <h4>Precio unit.: ${{this.product.price}}</h4>
                </div>
                <div class="col-3 border-end border-dark">
                    <h4>Valor total: ${{this.totalPrice}}</h4>
                </div>
            </div>
        {{/each}}
    </div>
</div>