<div class="container-fluid d-flex justify-content-center align-items-center" style="min-height: 100vh; background-color: #ddd;">
    <div class="col-10 bg-dark opacity-75 p-3">
        <h1 class="text-white text-center">Mi Carrito {{cartId}}</h1>
        {{#each cart.payload}}
            <div class="row bg-danger border border-dark border-2 my-2 py-2">
                <div class="col-3 border-end border-dark">
                    <h4 class="text-white">{{this.product.title}}</h4>
                </div>
                <div class="col-3 border-end border-dark">
                    <h4 class="text-white">Cantidad: {{this.quantity}}</h4>
                </div>
                <div class="col-3 border-end border-dark">
                    <h4 class="text-white">Precio unit.: ${{this.product.price}}</h4>
                </div>
                <div class="col-3 border-end border-dark">
                    <h4 class="text-white">Valor total: ${{this.totalPrice}}</h4>
                </div>
            </div>
        {{/each}}
    </div>
</div>
