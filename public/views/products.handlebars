 <nav style="display: flex; justify-content: center; align-items: center;">
    <ul style="display: flex; list-style: none; margin: 0; padding: 0;">
        <li style="margin: 0 10px;"><a href="/signup">Signup</a></li>
        <li style="margin: 0 10px;"><a href="/login">Login</a></li>
        <li style="margin: 0 10px;"><a href="/products">Products</a></li>
        <li style="margin: 0 10px;"><a href="/cart">Cart</a></li>
        <li style="margin: 0 10px;"><a href="/chat">Chat</a></li>
        <li style="margin: 0 10px;"><a href="/logout">Logout</a></li>


    </ul>
</nav>

<div id="productsConteiner">
        <h1 class="text-white text-center">Lista de productos</h1>
        <div >

            <div id="messageDiv"></div>

            {{#each products}}
                    <div>
                        <h2 class="card-title">{{this.title}}</h2>
                        <div class="card-body">
                            <img src={{this.thumbnail}}>
                        </div>
                    </div>
                </div>

                <div>
                <input type="number" class="productQuantity" min="1" value="1">
                <button class="productQuantityButton">Agregar al carrito</button>
            </div>

            {{/each}}
        </div>

        {{#if products.pagination.active}}
            <nav>
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="{{products.pagination.prevLink}}" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    {{#each products.pagination.pagesLinks}}
                        <li class="page-item"><a class="page-link{{#if active}} active {{/if}}" href="{{link}}">{{page}}</a></li>
                    {{/each}}
                    <li class="page-item">
                        <a class="page-link" href="{{products.pagination.nextLink}}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        {{/if}}


    </div>
    <button id="logout">Logout</button>
</div>

<script src="logout.js" type="application/javascript"></script>